---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Footer2 from '../components/Footer2.astro';
import Header2 from '../components/Header2.astro';
import WhtBtn from "../components/WhtBtn.astro";
// Get the current URL pathname from Astro
const currentPath = Astro.url.pathname;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<!-- Favicon start -->
		<link rel="apple-touch-icon" sizes="180x180" href="/img/favicon/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/img/favicon/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/img/favicon/favicon-16x16.png">
		<link rel="icon" type="image/png" sizes="192x192" href="/img/favicon/android-chrome-192x192.png">
		<link rel="icon" type="image/png" sizes="512x512" href="/img/favicon/android-chrome-512x512.png">
		<link rel="shortcut icon" href="/img/favicon/favicon.ico">
		
		 <!-- Favicon end -->
		<meta name="generator" content={Astro.generator} />
		<title>IFG Corp</title>
		<link rel="stylesheet" href="/css/plugins.css" />
	<link rel="stylesheet" href="/css/style.css" />
	<link rel="stylesheet" href="/css/table.css" />
	<link rel="stylesheet" href="/css/card.css" />
	<slot name="head" />
	</head>
	<body>
	<div class="preloader-bg"></div>
	<div id="preloader">
		<div id="preloader-status">
			<div class="preloader-position loader"> <span></span> </div>
		</div>
	</div>
		<div class="progress-wrap cursor-pointer">
			<svg class="progress-circle svg-content" width="100%" height="100%" viewBox="-1 -1 102 102">
				<path d="M50,1 a49,49 0 0,1 0,98 a49,49 0 0,1 0,-98" />
			</svg>
		</div>
		<Header2 />
		<slot />
		<WhtBtn link="https://wa.me/17189082240"/>
		<div id="footer-default">
			<Footer />
		  </div>
		  <div id="footer-special" style="display: none;">
			<Footer2 />
		  </div>
		  <script is:inline>
			// Wait for the DOM to load
			document.addEventListener("DOMContentLoaded", function () {
			  // Normalize pathname: remove trailing slash if exists
			  let path = window.location.pathname.replace(/\/$/, "");
			  // For home page, window.location.pathname might be '' (empty) if it resolves as "/"
			  if (path === "") path = "/";
			  
			  // If path is "/" or "/contact", show Footer2 (special), else show the default Footer.
			  if (path === "/" || path === "/contact") {
				document.getElementById("footer-default").style.display = "none";
				document.getElementById("footer-special").style.display = "block";
			  } else {
				document.getElementById("footer-special").style.display = "none";
				document.getElementById("footer-default").style.display = "block";
			  }
			});
		  </script>
		<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" integrity="sha512-bLT0Qm9VnAYZDflyKcBaQ2gg0hSYNQrJ8RilYldYQ1FxQYoCLtUjuuRuZo+fjqhx/qtq/1itJ0C2ejDxltZVFg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
	<script is:inline src="/js/jquery-3.5.1.min.js"></script>
	<script is:inline src="/js/jquery-migrate-3.0.0.min.js"></script>
	<script is:inline src="/js/modernizr-2.6.2.min.js"></script>
	<script is:inline src="/js/popper.min.js"></script>
	<script is:inline src="/js/bootstrap.min.js"></script>
	<script is:inline src="/js/scrollIt.min.js"></script>
	<script is:inline src="/js/jquery.waypoints.min.js"></script>
	<script is:inline src="/js/owl.carousel.min.js"></script>
	<script is:inline src="/js/jquery.stellar.min.js"></script>
	<script is:inline src="/js/jquery.magnific-popup.js"></script>
	<script is:inline src="/js/YouTubePopUp.js"></script>
	<script is:inline src="/js/custom.js"></script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>