---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <Fragment slot="head">
    <title>CFO Services | IFG</title>
  </Fragment>
  <!-- Banner Header -->
  <div class="banner-header section-padding valign bg-img bg-fixed" data-overlay-dark="4" data-background="img/services/3.webp">
    <div class="container">
      <div class="row">
        <div class="col-md-8 offset-md-2 text-center caption mt-90">
          <h5 class="animate-box" data-animate-effect="fadeInUp">
            <a href="/">Home</a> / CFO Services
          </h5>
          <h1 class="animate-box" data-animate-effect="fadeInUp">CFO Services</h1>
          <hr class="animate-box" data-animate-effect="fadeInUp">
          <p class="animate-box" data-animate-effect="fadeInUp">
            Our CFO Services give you a professional financial manager who works with you to help guide your business to success.
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- CFO Services Section -->
  <div class="services section-padding" id="cfo-services">
  <div class="container">
    <div class="row">
      <div class="section-head mb-30 col-md-12">
        <div class="section-subtitle">CFO SERVICES</div>
        <div class="section-title">Our CFO Services</div>
      </div>
    </div>
    <div class="row">
      <!-- Card 1: Financial Clarity -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-lightbulb"></span>
          <h5>Financial Clarity</h5>
          <div class="line"></div>
          <p>Clear insights to control your finances.</p>
          <div class="numb">01</div>
        </div>
      </div>
      <!-- Card 2: Enhanced Decision-Making -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-linegraph"></span>
          <h5>Enhanced Decision-Making</h5>
          <div class="line"></div>
          <p>Data-driven choices for business growth.</p>
          <div class="numb">02</div>
        </div>
      </div>
      <!-- Card 3: Expert Guidance -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-chat"></span>
          <h5>Expert Guidance</h5>
          <div class="line"></div>
          <p>Your sounding board for tough decisions.</p>
          <div class="numb">03</div>
        </div>
      </div>
      <!-- Card 4: Dedicated Oversight -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-shield"></span>
          <h5>Dedicated Oversight</h5>
          <div class="line"></div>
          <p>Continuous improvement of operations.</p>
          <div class="numb">04</div>
        </div>
      </div>
      <!-- Card 5: Robust Financial Controls -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-lock"></span>
          <h5>Robust Financial Controls</h5>
          <div class="line"></div>
          <p>Reduce risk and boost profit.</p>
          <div class="numb">05</div>
        </div>
      </div>
      <!-- Card 6: Staff Training & Management -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-profile-male"></span>
          <h5>Staff Training &amp; Management</h5>
          <div class="line"></div>
          <p>Enhance your teamâ€™s financial skills.</p>
          <div class="numb">06</div>
        </div>
      </div>
      <!-- Card 7: Timely Financial Reporting -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-calendar"></span>
          <h5>Timely Financial Reporting</h5>
          <div class="line"></div>
          <p>Accurate reports for strategic planning.</p>
          <div class="numb">07</div>
        </div>
      </div>
      <!-- Card 8: Budget Management -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-wallet"></span>
          <h5>Budget Management</h5>
          <div class="line"></div>
          <p>Effective budget planning and monitoring.</p>
          <div class="numb">08</div>
        </div>
      </div>
      <!-- Card 9: Profitability Analysis -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-piechart"></span>
          <h5>Profitability Analysis</h5>
          <div class="line"></div>
          <p>Identify your most profitable segments.</p>
          <div class="numb">09</div>
        </div>
      </div>
      <!-- Card 10: Tax Optimization -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-document"></span>
          <h5>Tax Optimization</h5>
          <div class="line"></div>
          <p>Minimize liabilities with tailored strategies.</p>
          <div class="numb">10</div>
        </div>
      </div>
      <!-- Card 11: Market Trend Analysis -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-speedometer"></span>
          <h5>Market Trend Analysis</h5>
          <div class="line"></div>
          <p>Stay ahead with real-time market insights.</p>
          <div class="numb">11</div>
        </div>
      </div>
      <!-- Card 12: Professional Liaison -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-envelope"></span>
          <h5>Professional Liaison</h5>
          <div class="line"></div>
          <p>Connect with key financial partners.</p>
          <div class="numb">12</div>
        </div>
      </div>
      <!-- Card 13: Process Documentation -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-paperclip"></span>
          <h5>Process Documentation</h5>
          <div class="line"></div>
          <p>Create robust accounting procedure manuals.</p>
          <div class="numb">13</div>
        </div>
      </div>
      <!-- Card 14: Capital Analysis -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-telescope"></span>
          <h5>Capital Analysis</h5>
          <div class="line"></div>
          <p>Assess investments and expansion opportunities.</p>
          <div class="numb">14</div>
        </div>
      </div>
      <!-- Card 15: Custom Collections -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-target"></span>
          <h5>Custom Collections</h5>
          <div class="line"></div>
          <p>Optimize cash flow with specialized policies.</p>
          <div class="numb">15</div>
        </div>
      </div>
    </div>
  </div>
</div>

</Layout>
