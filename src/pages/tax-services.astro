---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <!-- Banner Header -->
  <div class="banner-header section-padding valign bg-img bg-fixed" data-overlay-dark="4" data-background="img/slider/04.jpg">
    <div class="container">
      <div class="row">
        <div class="col-md-8 offset-md-2 text-center caption mt-90">
          <h5 class="animate-box" data-animate-effect="fadeInUp">
            <a href="index.html">Home</a> / Tax Services
          </h5>
          <h1 class="animate-box" data-animate-effect="fadeInUp">Tax Services</h1>
          <hr class="animate-box" data-animate-effect="fadeInUp">
          <p class="animate-box" data-animate-effect="fadeInUp">
            Your trusted partner in tax planning and return preparation
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Tax Services Content Section -->
 <div class="services section-padding" id="tax-services">
  <div class="container">
    <div class="row">
      <div class="section-head mb-30 col-md-12">
        <div class="section-subtitle">TAX SERVICES</div>
        <div class="section-title">Our Tax Services</div>
      </div>
    </div>
    <div class="row">
      <!-- Card 1: Individuals -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-profile-male"></span>
          <h5>Individuals</h5>
          <div class="line"></div>
          <p>Personalized tax solutions to maximize benefits.</p>
          <div class="numb">01</div>
        </div>
      </div>
      <!-- Card 2: Corporations -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-briefcase"></span>
          <h5>Corporations</h5>
          <div class="line"></div>
          <p>Comprehensive tax management for compliance and savings.</p>
          <div class="numb">02</div>
        </div>
      </div>
      <!-- Card 3: Partnerships -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-chat"></span>
          <h5>Partnerships</h5>
          <div class="line"></div>
          <p>Tailored guidance for complex partnership tax issues.</p>
          <div class="numb">03</div>
        </div>
      </div>
      <!-- Card 4: LLCs/LLPs -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-documents"></span>
          <h5>LLCs/LLPs</h5>
          <div class="line"></div>
          <p>Expert advice to optimize tax outcomes and liabilities.</p>
          <div class="numb">04</div>
        </div>
      </div>
      <!-- Card 5: Estates, Trusts &amp; Gift -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-gift"></span>
          <h5>Estates, Trusts &amp; Gift</h5>
          <div class="line"></div>
          <p>Specialized expertise in estate planning and trust administration.</p>
          <div class="numb">05</div>
        </div>
      </div>
      <!-- Card 6: Sales Taxes -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-piechart"></span>
          <h5>Sales Taxes</h5>
          <div class="line"></div>
          <p>Accurate computation and timely compliance with sales taxes.</p>
          <div class="numb">06</div>
        </div>
      </div>
      <!-- Card 7: Payroll Taxes -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-clock"></span>
          <h5>Payroll Taxes</h5>
          <div class="line"></div>
          <p>Streamlined processing to keep payroll compliant and efficient.</p>
          <div class="numb">07</div>
        </div>
      </div>
    </div>
  </div>
</div>

</Layout>
