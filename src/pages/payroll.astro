---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <!-- Banner Header -->
  <div class="banner-header section-padding valign bg-img bg-fixed" data-overlay-dark="4" data-background="img/services/2.webp">
    <div class="container">
      <div class="row">
        <div class="col-md-8 offset-md-2 text-center caption mt-90">
          <h5 class="animate-box" data-animate-effect="fadeInUp">
            <a href="index.html">Home</a> / Payroll
          </h5>
          <h1 class="animate-box" data-animate-effect="fadeInUp">Payroll</h1>
          <hr class="animate-box" data-animate-effect="fadeInUp">
          <p class="animate-box" data-animate-effect="fadeInUp">
            IFG's payroll is a state-of-the-art, full-service, and fully secure payroll processing center.
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Payroll Services Section -->
  <div class="services section-padding" id="payroll-services">
  <div class="container">
    <div class="row">
      <div class="section-head mb-30 col-md-12">
        <div class="section-subtitle">PAYROLL SERVICES</div>
        <div class="section-title">Our Payroll Services</div>
      </div>
    </div>
    <div class="row">
      <!-- Card 1: Direct Deposit -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-wallet"></span>
          <h5>Direct Deposit</h5>
          <div class="line"></div>
          <p>Secure, timely payroll payments via direct deposit.</p>
          <div class="numb">01</div>
        </div>
      </div>
      <!-- Card 2: Electronic Tax Filing -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-documents"></span>
          <h5>Electronic Tax Filing</h5>
          <div class="line"></div>
          <p>Automated, accurate filing of all required tax forms.</p>
          <div class="numb">02</div>
        </div>
      </div>
      <!-- Card 3: W-2 &amp; 1099 Filing -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-printer"></span>
          <h5>W-2 &amp; 1099 Filing</h5>
          <div class="line"></div>
          <p>Comprehensive management of employee and contractor reporting.</p>
          <div class="numb">03</div>
        </div>
      </div>
      <!-- Card 4: Quarterly &amp; Annual Reports -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-calendar"></span>
          <h5>Reporting</h5>
          <div class="line"></div>
          <p>Timely submission of essential financial reports.</p>
          <div class="numb">04</div>
        </div>
      </div>
      <!-- Card 5: Online Timekeeping -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-clock"></span>
          <h5>Online Timekeeping</h5>
          <div class="line"></div>
          <p>Accurately capture employee work hours digitally.</p>
          <div class="numb">05</div>
        </div>
      </div>
      <!-- Card 6: Custom Reports -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-briefcase"></span>
          <h5>Custom Reports</h5>
          <div class="line"></div>
          <p>Tailored analytical reports for your business needs.</p>
          <div class="numb">06</div>
        </div>
      </div>
    </div>
  </div>
</div>

</Layout>
