---
// import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';

---
<style>
@media screen and (max-width: 767px) {
  h1  {
    font-size:30px !important;
    text-wrap:nowrap;
  }
}
</style>
<Layout>
    <div class="banner-header section-padding valign bg-img bg-fixed" data-overlay-dark="4" data-background="img/services/4.webp">
		<div class="container">
			<div class="row">
				<div class="col-md-8 offset-md-2 text-center caption mt-90">
					<h5 class="animate-box" data-animate-effect="fadeInUp"><a href="index.html">Home</a> / BookKeeping</h5>
					<h1 class="animate-box" data-animate-effect="fadeInUp">BookKeeping</h1>
					<hr class="animate-box" data-animate-effect="fadeInUp">
					<p class="animate-box" data-animate-effect="fadeInUp">Streamlined Bookkeeping & Financial Management Solutions</p>
				</div>
			</div>
		</div>
	</div>
	<div class="services section-padding" id="industries">
  <div class="container">
    <div class="row">
      <div class="section-head mb-30 col-md-12">
        <div class="section-subtitle">BOOK KEEPING</div>
        <div class="section-title">Our Book Keeping Services</div>
      </div>
    </div>
    <div class="row">
      <!-- Card 1: Accounts Payable & Receivable -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-documents"></span>
          <h5>Accounts Payable &amp; Receivable</h5>
          <div class="line"></div>
          <p>Efficiently manage supplier bills and invoicing.</p>
          <div class="numb">01</div>
        </div>
      </div>
      <!-- Card 2: Invoicing/Billing -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-pricetags"></span>
          <h5>Invoicing/Billing</h5>
          <div class="line"></div>
          <p>Create timely, accurate invoices.</p>
          <div class="numb">02</div>
        </div>
      </div>
      <!-- Card 3: Comprehensive Payroll Administration -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-clock"></span>
          <h5>Payroll Administration</h5>
          <div class="line"></div>
          <p>Process payroll accurately and on time.</p>
          <div class="numb">03</div>
        </div>
      </div>
      <!-- Card 4: Bank & Credit Card Reconciliation -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-linegraph"></span>
          <h5>Reconciliation</h5>
          <div class="line"></div>
          <p>Maintain precise financial records.</p>
          <div class="numb">04</div>
        </div>
      </div>
      <!-- Card 5: Job Costing -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <!-- Using et-tools as an example icon -->
          <span class="icon et-tools"></span>
          <h5>Job Costing</h5>
          <div class="line"></div>
          <p>Track project expenses to maximize profit.</p>
          <div class="numb">05</div>
        </div>
      </div>
      <!-- Card 6: Budgeting, Forecasting, & Cash Projections -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-bargraph"></span>
          <h5>Budgeting &amp; Forecasting</h5>
          <div class="line"></div>
          <p>Plan with clear insights into your financial future.</p>
          <div class="numb">06</div>
        </div>
      </div>
      <!-- Card 7: Petty Cash Management -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-clipboard"></span>
          <h5>Petty Cash Management</h5>
          <div class="line"></div>
          <p>Oversee small cash transactions efficiently.</p>
          <div class="numb">07</div>
        </div>
      </div>
      <!-- Card 8: Financial Reporting -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-newspaper"></span>
          <h5>Financial Reporting</h5>
          <div class="line"></div>
          <p>Receive regular, tailored financial reports.</p>
          <div class="numb">08</div>
        </div>
      </div>
      <!-- Card 9: QuickBooks Setup & Customization -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-tools-2"></span>
          <h5>QuickBooks Setup</h5>
          <div class="line"></div>
          <p>Customize QuickBooks with a tailored Chart of Accounts.</p>
          <div class="numb">09</div>
        </div>
      </div>
      <!-- Card 10: Customized Financial Services -->
      <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
        <div class="item border-custom">
          <span class="icon et-adjustments"></span>
          <h5>Customized Services</h5>
          <div class="line"></div>
          <p>Tailored solutions to help grow your business.</p>
          <div class="numb">10</div>
        </div>
      </div>
    </div>
  </div>
</div>

</Layout>
